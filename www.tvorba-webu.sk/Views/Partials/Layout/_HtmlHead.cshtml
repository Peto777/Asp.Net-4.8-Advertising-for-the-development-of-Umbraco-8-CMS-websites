@inherits UmbracoViewPage
<head>
    @if (System.Configuration.ConfigurationManager.AppSettings["redirectToHttps"] == "true")
    {
        <script>
            if (window.location.protocol != 'https:') {
                location.href = location.href.replace("http://", "https://");
            }
        </script>
    }

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="copyright" content="Tvorba-webu" />
    <meta name="description" content="@Model.Value("metaDescription")" />
    <meta name="language" content="sk" />
    <meta name="content-language" content="sk" />
    <meta name="author" content="Tvorba-webu" />
    <meta name="robots" content="index, noodp" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link rel="shortcut icon" href="@Url.Content("~/Styles/images/.png")" />

    <title>@Model.Value("pageTitle")</title>
    <link href="@Url.Content("~/Styles/css/bootstrap.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/css/bootstrap-theme.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/fontawesome-free-5.13.0/css/all.min.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/css/content.min.css?v3")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/css/slick.css")" type="text/css" rel="stylesheet" />
    <link href="@Url.Content("~/Styles/css/slick-theme.css")" type="text/css" rel="stylesheet" />

    <script src="@Url.Content("~/Scripts/jquery-1.10.2.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.validate.min.js")"></script>
    <script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap.min.js")"></script>
    <script src="@Url.Content("~/Scripts/slick.min.js")" type="text/javascript"></script>
</head>